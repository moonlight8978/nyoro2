<div class="b-box">
  <%= form_for(@album, html: { class: 'b-form' }) do |f| %>
    <div class="form-group b-form-group">
      <%= f.text_field :title, class: class_string('form-control' => true, 'is-invalid' => @album.errors.messages[:title].present?) %>
      <%= f.label :title, 'タイトル*' %>
      <div class="invalid-feedback">
        <% @album.errors.messages[:title].each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group b-form-group">
          <%= f.text_field :title_pronounce, class: class_string('form-control' => true, 'is-invalid' => @album.errors.messages[:title_pronounce].present?) %>
          <%= f.label :title_pronounce, 'タイトル（発音）*' %>
          <div class="invalid-feedback">
            <% @album.errors.messages[:title_pronounce].each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-sm-6">
        <div class="form-group b-form-group">
          <%= f.text_field :title_en, class: class_string('form-control' => true, 'is-invalid' => @album.errors.messages[:title_en].present?) %>
          <%= f.label :title_en, 'タイトル（英語／ローマ字）*' %>
          <div class="invalid-feedback">
            <% @album.errors.messages[:title_en].each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-6 col-sm-3">
        <div class="b-img-placeholder b-ratio-1_1">
          <div class="b-img-thumb" 
            data-background-image="<%= @album.image_url.to_s %>">
          </div>
        </div>
      </div>
      
      <div class="col-sm-9 pt-3 pt-sm-0">
        <div class="form-group b-form-group">
          <input type="text" name="" value="asdasdasdasd" class="form-control">
          <label for="">写真のURL</label>
        </div>
        
        <div class="form-group b-form-group">
          <%= f.file_field :image, class: class_string('form-control-file' => true, 'is-invalid' => @album.errors.messages[:image].present?) %>
          <%= f.label :image, 'それとも写真をアップロード' %>
          <div class="invalid-feedback">
            <% @album.errors.messages[:image].each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <%= f.submit '提出', class: 'btn-c btn-c-5 btn-c-5-sakura pull-right' %>
    <div class="clearfix"></div>
  <% end %>
</div>


