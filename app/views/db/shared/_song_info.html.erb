<div class="b-box b-box-p">
  <table class="b-table b-table-hidden-th">
    <tbody>
      <tr>
        <th>番号</th>
        <td>
          <%= @latest.number %>/<%= @song.disc.songs.size %>
        </td>
      </tr>
      <tr>
        <th class="align-bottom">タイトル</th>
        <td>
          <div class="b-ruby">
            <span class="b-rb b-ellipsis" title="<%= @latest.title %>">
              <%= @latest.title %>
            </span>
            <span class="b-rt b-ellipsis" title="<%= @latest.title_pronounce %>">
              <%= @latest.title_pronounce %>
            </span>
            <span></span>
          </div>
        </td>
      </tr>
      <tr>
        <th>ローマ字</th>
        <td>
          <%= @latest.title_en %>
        </td>
      </tr>
      <tr>
        <th>長さ</th>
        <td>
          <%= @latest.length %>
        </td>
      </tr>
      <tr>
        <th>アルバム</th>
        <td>
          <% first_version = @song.disc.album_versions.first %>
          <%= link_to first_version.title, db_album_path(first_version.album_id) %>
          (<%= link_to "バージョン#{first_version.id}", db_album_version_path(first_version.album_id, first_version.id) %>)
        </td>
      </tr>
    </tbody>
  </table>
</div>