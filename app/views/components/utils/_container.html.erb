<div class="page-utility-container">
  <div class="page-utility-group">
    <%= yield :utils_dropdowns %>
    
    <div class="page-utility dropdown">
      <span class="utility-label" id="hideNsfw"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
      >
        nsfw
        <span>&#9660;</span>
      </span>
      
      <div class="dropdown-menu dropdown-off-autoclose" aria-labelledby="hideNsfw">
        <div class="dropdown-item">
          <%= link_to nsfw_status ? 'ON' : 'OFF', utilities_nsfw_path, 
            class: 'btn-c btn-c-5 btn-c-5-sakura px-3 py-1 utils-nsfw-toggle',
            'data-disable-with' => '読み中...', method: :post
          %>
          18+コンテンツ
        </div>
      </div>
    </div>
  </div>
  
  <% if content_for? :options %>
    <div class="page-utility-group">
      <div class="page-utility dropdown crud">
        <span class="utility-label" id="crud"
          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
        >
          <div class="b-flex-middle h-100">
            <i class="fa fa-fw fa-ellipsis-v"></i>
          </div>
        </span>
        
        <%= yield :options %>
      </div>
    </div>
  <% end %>
</div>