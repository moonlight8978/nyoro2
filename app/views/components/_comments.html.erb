<div class="b-box b-box-p">
  <% if comments.any? %>
    <% comments.each do |comment| %>
      <div class="">
        <div class="">
          <%= comment.user.user_name || '無名' %>
        </div>
        <div class="">
          <%= comment.body || '無名' %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="">
      コメントがありません。
    </div>
  <% end %>
</div>

<div class="">
  <% unless comments.last_page? %>
    <%= link_to '他のコメントを見る',
      polymorphic_path([commentable, :comments], page: comments.next_page), 
      remote: true 
    %>
  <% end %>
</div>
