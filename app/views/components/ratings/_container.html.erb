<div class="page-utility dropdown feature-rating-container">
  <span class="utility-label" id="rateForm"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
  >
    Rating:
    <span id="userRatedStar"><%= rated.to_s %></span>
    /
    <span id="avgRatedStar"><%= rateable.average_stars %></span>
    <span>&#9660;</span>
  </span>

  <div class="dropdown-menu" aria-labelledby="rateForm">
    <% if user_signed_in? %>
      <%= render 'components/ratings/form', rateable: rateable, rated: rated, available_ratings: available_ratings %>
    <% else %>
      <div class="text-center">
        ログインのが必要です
      </div>
    <% end %>
  </div>
</div>
