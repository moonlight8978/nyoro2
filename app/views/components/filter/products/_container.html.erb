  <div class="">
    <ul class="list-group">
      <h6 class="b-list-group-header b-flex-space-between">
        <span>検索</span>
        <%= button_tag name: nil, class: "b-btn-clear b-as-link" do %>
          <span>絞り込む</span>
          <i class="fa fa-filter" aria-hidden="true"></i>
        <% end %>
      </h6>
    </ul>

    <%= render "components/filter/products/categories" %>
    <%= render "components/filter/products/sort" %>
    <%= render "components/filter/products/price" %>
  </div>
<% end %>
