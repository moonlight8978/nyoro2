<div class="b-box-group mt-3 comment-container">
  <h6 class="b-box-title">
    コメント
  </h6>
  
  <div class="b-box">
    <div class="b-box-another top">
      <%= render partial: 'components/comments/form', locals: { commentable: commentable } %>
    </div>
    <div id="commentList">
      <% if initial_comments.length > 0 %>
        <%= render partial: 'components/comments/list', 
          locals: { 
            commentable: commentable,
            comments: initial_comments 
          } 
        %>
      <% else %>
        <div class="b-box-row">
          コメントがありません。
        </div>
      <% end %>
    </div>
  </div>
</div>