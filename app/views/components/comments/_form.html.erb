<% if user_signed_in? %>
  <%= form_for(@comment, url: db_album_comments_path(@album), html: { class: 'comment-form' }) do |f| %>
    <div class="comment-user-avatar">
      <div class="b-img-placeholder b-img-placeholder-avatar b-ratio-1_1">
        <div class="b-img-thumb" data-background-image="<%= current_user.avatar_url %>">
        </div>
      </div>
    </div>
    <div class="comment-input">
      <%= f.text_area :body, rows: 1, class: 'form-control' %>
    </div>
    <div class="comment-submit">
      <%= f.button nil, class: 'btn-c btn-c-5 btn-c-5-sakura', 'data-disable-with' => '...' do %>
        <i class="fa fa-angle-right"></i>
      <% end %>
    </div>
  <% end %>
<% else %>
  ログインのが必要です。
<% end %>