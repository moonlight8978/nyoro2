<%= content_for :side_nav do %>
  <%= render 'users/shop/side_nav' %>
<% end %>

<% if @shop.approved? %>
  <%= content_for :right_col do %>
    <div class="b-box p-3">
      sad
    </div>
  <% end %>

  <div class="b-box ec-shop-info">
    <div class="">
      <div class="b-box-row">
        <h4><%= @shop.name %></h4>
        <span>(<%= @shop.created_at %>から)</span>
      </div>

      <div class="b-box-row bottom ec-shop-info-others py-3 px-0">
        <div class="b-row-horizontal-group">
          <div class="b-row-horizontal">
            <div class="b-break">
              <i class="fa fa-home fa-fw"></i>
              <span><%= @shop.website %></span>
            </div>

            <div class="b-break">
              <i class="fa fa-map-marker fa-fw"></i>
              <span><%= @shop.address %></span>
            </div>
          </div>

          <div class="b-row-horizontal">
            <div class="b-break">
              <i class="fa fa-envelope fa-fw"></i>
              <span><%= @shop.email %></span>
            </div>

            <div class="b-break">
              <i class="fa fa-phone fa-fw"></i>
              <span><%= @shop.phone %></span>
            </div>
          </div>

          <div class="b-row-horizontal b-row-horizontal-toggler">
            <a href data-toggle="collapse" data-target="#shopInfos" aria-expanded="false" aria-controls="shopInfos">
              <i class="fa fa-angle-down"></i>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="collapse" id="shopInfos">
      <div class="b-box-another bottom">
        <div class="">
          <h6>ディスクリプション</h6>
          <p><%= @shop.description %></p>
        </div>

        <div class="">
          map
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3 row">
    <div class="col-8">
      graph
    </div>

    <div class="col-4">
      graph
    </div>
  </div>
<% else %>
  <div class="alert alert-danger" role="alert">
    Your shop has not been approved yet. Sorry for inconvenience!
  </div>
<% end %>
