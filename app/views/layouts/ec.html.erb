<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/head' %>
</head>
<body>
  <%= render 'layouts/navbar' unless @no_navbar %>

  <div class="pt-5"></div>
  <div class="pt-4"></div>
  <div class="pt-3"></div>

  <%= yield :breadcrumb %>

  <div class="animated fadeIn">
    <div class="container pb-4">
      <div class="row">
        <div class="d-none pr-1
          <%= content_for?(:right_col) ?
            'd-lg-block col-lg-2' :
            'd-md-block col-md-3 col-lg-2'
          %>"
        >
          <%= yield :side_nav %>
        </div>

        <div class="col-md-9 col-lg-<%= content_for?(:right_col) ? 7 : 10 %>">
          <%= yield %>
        </div>

        <% if content_for? :right_col %>
          <div class="col-md-3 mt-3 mt-md-0">
            <%= yield :right_col %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= yield :modals %>

  <%= render 'layouts/footer' unless @no_footer %>
</body>
</html>
