<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/head' %>
</head>
<body>
  <%= render 'layouts/navbar' unless @no_navbar %>

  <div class="pt-5"></div>
  <div class="pt-4"></div>
  <div class="pt-3"></div>

  <%= yield :breadcrumb %>

  <div class="animated fadeIn">
    <div class="container pb-4">
      <div class="row">
        <div class="d-none pr-1 d-lg-block col-lg-2">
          <%= yield :side_nav %>
        </div>

        <div class="col-lg-<%= content_for?(:side_nav) ? "10" : "12" %>">
          <div class="row">
            <% if content_for? :sidenav %>
              <div class="<%= content_for?(:right_col) ? "col-md-8" : "col" %>">
                <%= yield %>
              </div>

              <% if content_for? :right_col %>
                <div class="col-md-4 mt-3 mt-md-0">
                  <%= yield :right_col %>
                </div>
              <% end %>
            <% else %>
              <div class="<%= content_for?(:right_col) ? "col-md-8 col-lg-9" : "col" %>">
                <%= yield %>
              </div>

              <% if content_for? :right_col %>
                <div class="col-md-4 col-lg-3 mt-3 mt-md-0">
                  <%= yield :right_col %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= yield :modals %>

  <%= render 'layouts/footer' unless @no_footer %>
</body>
</html>
