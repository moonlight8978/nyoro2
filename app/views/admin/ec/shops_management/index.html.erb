<%= page_title('ショップ管理', 'Shops management') %>

<div class="p-3">
  <div class="b-box">
    <%= render 'admin/ec/shops_management/list_filter' %>
  </div>

  <div class="b-box b-box-p mt-3">
    <table class="b-data-table b-table-loading" id="manageDbResources">
      <thead>
        <tr>
          <th class="b-col-wide">ID・店名</th>
          <th class="b-col-semi-wide">オーナー</th>
          <th class="b-col-medium text-center">承認</th>
          <th class="b-col-small b-col-last">行動</th>
        </tr>
      </thead>

      <!-- To fix tr hover make border disappear -->
      <tbody>
        <tr>
          <td class="p-0 m-0"></td>
        </tr>
      </tbody>

      <tbody class="b-tbody-loading">
        <tr>
          <td colspan="4"><div class="b-loading"></div></td>
        </tr>
      </tbody>

      <%= render 'admin/ec/shops_management/list_table', shops: shops %>
    </table>
  </div>
</div>
