<div class="admin-dashboard p-3">
  <div class="row">
    <div class="col-md-8">
      <div class="b-box h-100">
        <div class="">
          <canvas id="editChart" width="4" height="1"></canvas>
          <script>
          var ctx = document.getElementById("editChart").getContext('2d');
          var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: <%= raw Feature::Log.all.group_by_day(&:created_at).map { |day, logs| day.to_s } %>,
              datasets: [{
                label: 'Total of edit',
                borderColor: 'rgba(255, 99, 132, 0.2)',
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                fill: false,
                data: <%= Feature::Log.where("created_at >= ?", 3.weeks.ago.at_beginning_of_day).group_by_day(&:created_at).map { |day, logs| logs.size } %>
              }]
              // }, {
              //   label: 'Total of comment',
              //   borderColor: 'rgba(54, 162, 235, 0.2)',
              //   fill: false,
              //   data: [5, 15]
              // }]
            },
            options: {
              scales: {
                xAxes: [{
                  gridLines: { display: false }
                }]
              }
            }
          });
          </script>
        </div>
        <div class="">
          <canvas id="editChartMonth" width="4" height="1"></canvas>
          <script>
          var ctx = document.getElementById("editChartMonth").getContext('2d');
          
          var myLineChart = new Chart(ctx, {
            type: 'bar',
            data: {
              labels: <%= raw @labels %>,
              datasets: [{
                label: 'Total of edit',
                borderColor: 'rgba(255, 99, 132, 0.2)',
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                fill: false,
                data: <%= @count %>
              }]
              // }, {
              //   label: 'Total of comment',
              //   borderColor: 'rgba(54, 162, 235, 0.2)',
              //   fill: false,
              //   data: [5, 15]
              // }]
            },
            options: {
              scales: {
                xAxes: [{
                  gridLines: { display: false }
                }],
                yAxes: [{
                  gridLines: { display: false }
                }]
              }
            }
          });
          </script>
        </div>
      </div>
      
    </div>
    
    <div class="col-md-4">
      <div class="b-box h-100">
        <div class="">
          comment chart
        </div>
        
        <div class="" style="background: green;">
          <canvas id="browserChart" width="2" height="1"></canvas>
          <script>
          var ctx = document.getElementById("browserChart").getContext('2d');
          
          var myLineChart = new Chart(ctx, {
            type: 'radar',
            data: {
              labels: ['Chrome', 'Firefox', 'IE', 'Safari', 'Others'],
              datasets: [{
                borderColor: 'white',
                borderWidth: 2,
                pointBackgroundColor: 'green',
                pointBorderColor: 'white',
                pointBorderWidth: 2,
                fill: false,
                data: [20, 20, 10, 15, 15]
              }]
            },
            options: {
              legend: {
                display: false
              },
              scale: {
                gridLines: { 
                  color: 'grey'
                },
                angleLines: {
                  color: 'white'
                },
                ticks: {
                  display: false,
                  maxTicksLimit: 3,
                  min: 0
                },
                pointLabels: {
                  fontColor: 'white'
                }
              }
            }
          });
          </script>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-sm-6 col-lg-3 mb-3">
      <div class="b-box">
        new album, total album
      </div>
      
    </div>
    <div class="col-sm-6 col-lg-3 mb-3">
      <div class="b-box">
        new product, total product
      </div>
      
    </div>
    <div class="col-sm-6 col-lg-3 mb-3">
      <div class="b-box">
        new user, total user
      </div>
      
    </div>
    <div class="col-sm-6 col-lg-3 mb-3">
      <div class="b-box">
        何を書いていい
      </div>
    </div>
  </div>
</div>