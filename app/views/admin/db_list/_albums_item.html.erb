<% latest = album.latest_version %>

<tr data-toggle="collapse" data-target="#albumId<%= album.id %>"
  aria-expanded="false" aria-controls="albumId<%= album.id %>"
>
  <td class="b-col-wide">
    <i class="fa fa-angle-right"></i>
    <i class="fa fa-angle-down"></i>
    <span class="px-1"><%= album.id %>.</span>
    <%= link_to latest.title, db_album_path(album), class: 'no-propagation b-link-no-color' %>
  </td>
  <td class="b-col-semi-wide">
    <%= link_to latest.editor.user_name, profile_path(latest.editor), class: 'no-propagation  b-link-no-color' %>
  </td>
  <td class="b-col-medium">
    <span class="b-label <%= album.status.css_class %>"><%= album.status.to_s %></span>
  </td>
  <td class="b-col-small b-col-last">
    <div class="b-icon-group b-size-small justify-content-center">
      <%= link_to db_album_path(album), method: :delete, class: 'no-propagation' do %>
        <div class="b-icon destroy">
          <i class="fa fa-trash"></i>
        </div>
      <% end %>
      <%= link_to edit_db_album_path(album), class: 'no-propagation' do %>
        <div class="b-icon update">
          <i class="fa fa-pencil"></i>
        </div>
      <% end %>
    </div>
  </td>
</tr>

<tr class="collapse b-row-collapse" id="albumId<%= album.id %>">
  <td colspan="4" class="px-3 b-font-90">
    <div class="row">
      <div class="col-9 col-md-10 col-lg-9 col-xl-10">
        <strong>詳しく見る: </strong>
        <%= link_to 'こっち', db_album_path(album) %><br>

        <strong>すべてのバージョンを見る: </strong>
        <%= link_to 'こっち', db_album_versions_path(album) %>
      </div>
      <div class="col-3 col-md-2 col-lg-3 col-xl-2">
        <div class="b-img-placeholder b-ratio-1_1">
          <div class="b-img-thumb"
            data-background-image="<%= latest.image_url.to_s %>"
          >
          </div>
        </div>
      </div>
    </div>

  </td>
</tr>
