<div class="b-box-row">
  <div class="row">
    <div class="col-sm-4 col-lg-3">
        <div class="row">
          <div class="d-none col-sm-3 d-sm-block text-center">
            <%= index + 1 %>
          </div>

        <div class="col-6 col-sm-9">
          <div class="b-img-placeholder b-ratio-1_1">
            <div class="b-img-thumb" data-background-image="<%= asset_path "product.jpg" %>">
            </div>
          </div>
        </div>

        <div class="col-6 d-sm-none">
          <%= link_to colors[0].product.name, ec_product_path(colors[0].product) %>
        </div>
      </div>
    </div>

    <div class="mt-3 mt-sm-0 col-sm-8 col-lg-9">
      <div class="d-none d-sm-block mb-2">
        <%= link_to colors[0].product.name, ec_product_path(colors[0].product) %>
      </div>

      <div class="px-3 b-font-90">
        <% colors.each do |color| %>
          <%= render("ec/shared/products_grouped/color", color: color, action: action) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
