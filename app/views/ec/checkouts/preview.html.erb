<%= breadcrumb(
  { name: "ホーム", path: home_path },
  { name: "商品", path: ec_products_path },
  "カート"
) %>

<div class="alert alert-primary text-center" role="alert">
  <%= form_for @order_form, url: ec_checkout_path, method: :post do |f| %>
    <%= f.hidden_field :shipping_id %>
    <%= f.fields_for :invoice_form, @order_form.invoice_form do |invoice_f| %>
      <%= invoice_f.hidden_field :last_name %>
      <%= invoice_f.hidden_field :first_name %>
      <%= invoice_f.hidden_field :phone_number %>
      <%= invoice_f.hidden_field :address %>
    <% end %>

    <%= f.button "予約する", class: "b-btn-clear b-link-no-color" %>
  <% end %>

  <span>|</span>
  <%= link_to "予約しない", "#", class: "b-link-no-color" %>
</div>

<div class="row">
  <div class="col-md-7 col-lg-8">
    <div class="b-box">
      <div class="b-box-another top">
        Products list
      </div>
      <div>
        <%= colors_grouped(@cart_color_ids, action: false) %>
      </div>
    </div>
  </div>

  <div class="col-md-5 col-lg-4 mt-3 mt-md-0">
    <div class="b-box b-box-p">
      <h6 class="b-box-title">Order</h6>

      <div class="text-right">
        <div class="b-flex-space-between b-table-row-hover">
          <strong>Payment method:</strong>
          <%# TODO fix %>
          <span><%= 'missing' %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>Shipping:</strong>
          <span><%= @order_form.shipping.method %></span>
        </div>
      </div>
    </div>

    <div class="b-box b-box-p">
      <h6 class="b-box-title">Invoice</h6>

      <div class="text-right">
        <div class="b-flex-space-between b-table-row-hover">
          <strong>Last name:</strong>
          <span><%= @order_form.invoice_form.last_name %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>First name:</strong>
          <span><%= @order_form.invoice_form.first_name %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>Phone number:</strong>
          <span><%= @order_form.invoice_form.phone_number %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>Address:</strong>
          <span><%= @order_form.invoice_form.address %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>Total:</strong>
          <span><%= @total %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>Points used:</strong>
          <%# TODO fix %>
          <span><%= 'missing' %></span>
        </div>

        <div class="b-flex-space-between b-table-row-hover">
          <strong>Cost</strong>
          <span><%= @total %></span>
        </div>
      </div>
    </div>
  </div>
</div>
