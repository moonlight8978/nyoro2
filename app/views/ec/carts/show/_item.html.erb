<div class="b-box-row">
  <div class="row">
    <div class="col-sm-4 col-lg-3">
        <div class="row">
          <div class="d-none col-sm-3 d-sm-block text-center">
            <%= index + 1 %>
          </div>

        <div class="col-6 col-sm-9">
          <div class="b-img-placeholder b-ratio-1_1">
            <div class="b-img-thumb" data-background-image="<%= asset_path "product.jpg" %>">
            </div>
          </div>
        </div>

        <div class="col-6 d-sm-none">
          <%= link_to colors[0].product.name, ec_product_path(colors[0].product) %>
        </div>
      </div>
    </div>

    <div class="mt-3 mt-sm-0 col-sm-8 col-lg-9">
      <div class="d-none d-sm-block mb-2">
        <%= link_to colors[0].product.name, ec_product_path(colors[0].product) %>
      </div>

      <div class="px-3 b-font-90">
        <% colors.each do |color| %>
          <% color = color.decorate %>

          <div class="row b-table-row">
            <div class="col-5 b-table-col">
              <%= color.name %>
            </div>

            <div class="col-2 b-table-col">
              <%= session[:cart]["#{color.id}"] %>
            </div>

            <div class="col-4 b-table-col">
              <strong>
                <%= color.price_meta(
                  discount: true,
                  size: 100,
                  style: :normal,
                  class_names: "b-product-price"
                ) %>
              </strong>
            </div>

            <div class="col-1 text-center b-table-col px-0">
              <strong>&times;</strong>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
