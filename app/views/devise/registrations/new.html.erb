<div class="pt-5"></div>
<div class="pt-4"></div>
<div class="pt-3"></div>

<div class="container pb-3 px-4">
  <div class="b-authenticate-container b-box">
    <div class="b-authenticate-title">
      <h3>無料登録</h3>
      <span class="d-none d-sm-inline-block">ノート</span>
    </div>
    
    <div class="row">
      <div class="col-lg-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group b-form-group">
            <%= f.email_field :email, autofocus: true, class: class_string('form-control': true, 'is-invalid': resource.errors[:email].present?) %>
            <%= f.label :email, 'メール' %>
            <div class="invalid-feedback">
              <% resource.errors.messages[:email].each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          </div>

          <div class="form-group b-form-group">
            <%= f.password_field :password, autocomplete: "off", class: class_string('form-control': true, 'is-invalid': resource.errors[:password].present?) %>
            <%= f.label :password, 'パスワード' %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">最小<%= @minimum_password_length %>文字</small>
            <% end %>
            <div class="invalid-feedback">
              <% resource.errors.messages[:password].each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          </div>
          
          <div class="form-group b-form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: class_string('form-control': true, 'is-invalid': resource.errors[:password_confirmation].present?) %>
            <%= f.label :password_confirmation, 'パスワード確認' %>
            <div class="invalid-feedback">
              <% resource.errors.messages[:password_confirmation].each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          </div>

          <%= f.submit "登録", class: 'btn-c btn-c-5 btn-c-5-sakura w-100' %>
        <% end %>
      </div>
      
      <div class="col-lg-6 mt-4 mt-lg-0">
        <div class="b-authenticate-social">
          <div class="b-authenticate-social-title">
            他のサービスIDで登録
          </div>
          
          <div class="b-authenticate-social-link-group">
            <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'b-authenticate-social-link google' do %>
              <i></i>
              <span>Googleアカウントで登録</span>
            <% end %>
            
            <a href="#" class="b-authenticate-social-link twitter">
              <i></i>
              <span>Twitterアカウントで登録</span>
            </a>
            
            <%= link_to user_facebook_omniauth_authorize_path, class: 'b-authenticate-social-link facebook' do %>
              <i></i>
              <span>Facebookアカウントで登録</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>