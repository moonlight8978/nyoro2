<%= form_for(@form, url: url, method: method, html: { class: 'b-form' }) do |f| %>
  <h6>製品</h6>

  <div class="row">
    <div class="col-3">
      <div class="form-group b-form-group">
        <%= f.collection_select :category_id, Ec::Category.all, :id, :name, {},
          class: class_string(
            'form-control': true,
            'is-invalid': @form.errors.messages[:category].present?
          ),
          require: true
        %>
        <%= f.label :category_id, 'タイプ' %>
        <div class="invalid-feedback">
          <% @form.errors.messages[:category].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-9">
      <div class="form-group b-form-group">
        <%= f.text_field :name, class: class_string('form-control': true, 'is-invalid' => @form.errors.messages[:name].present?), autofocus: true, require: true %>
        <%= f.label :name, '製品の名*' %>
        <div class="invalid-feedback">
          <% @form.errors.messages[:name].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group b-form-group">
    <%= f.text_area :description, class: class_string('form-control': true, 'is-invalid' => @form.errors.messages[:description].present?) %>
    <%= f.label :description, '製品の名*' %>
    <div class="invalid-feedback">
      <% @form.errors.messages[:description].each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>

  <%= yield f %>

  <div class="b-form-submit b-form-submit-right">
    <%= f.button submit_content, class: 'b-btn b-btn-raised b-btn-ripple' %>
  </div>
<% end %>
