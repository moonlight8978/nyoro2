<!-- new color modal -->
<div class="modal fade" id="addColorModal" tabindex="-1" role="dialog" aria-labelledby="addColorModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addColorModalLabel">Edit color</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- END header -->
      <% new_color_form = EcForm::Color.new(color: Ec::Product::Color.new) %>

      <%= form_for new_color_form,
        url: product_colors_path(@product),
        method: :post, html: { class: 'b-remote-form' } do |f|
      %>
        <div class="modal-body">
          <div class="b-remote-form-error" id="">
          </div>

          <div class="b-form-group form-group">
            <%= f.text_field :name, class: 'b-form-control form-control', required: true %>
            <%= f.label :name, '色' %>
            <small class="form-text text-muted">色がなければ、「Default」を入力してください。</small>
          </div>

          <div class="b-form-group form-group">
            <%= f.number_field :price, class: 'b-form-control form-control', min: 0, required: true %>
            <%= f.label :price, '価格' %>
          </div>

          <div class="b-form-group form-group">
            <%= f.fields_for :storage_form, new_color_form.storage_form do |storage_f| %>
              <%= storage_f.number_field :quantity,
                class: 'b-form-control form-control', min: 0, required: true
              %>
              <%= storage_f.label :quantity, '価格' %>
            <% end %>
          </div>
        </div>
        <!-- END body -->

        <div class="modal-footer">
          <button type="button" class="b-btn b-btn-raised b-btn-ripple b-bg-destroy" data-dismiss="modal">キャンセル</button>
          <%= f.button 'セフ',
            class: 'b-btn b-btn-raised b-btn-ripple b-bg-create',
            data: { 'disable-html': '読み込む中...' }
          %>
        </div>
        <!-- END footer -->
      <% end %>
    </div>
  </div>
</div>
<!-- END modal -->

