<%= form_tag destroy_multiple_product_images_path(@product), method: :delete do %>
  <div class="b-carousel b-has-checkbox">
    <ol class="b-carousel-indicators">
      <div class="slick" data-slides="<%= @product.images.size %>">
        <% @product.images.each do |slide| %>
          <li class="">
            <div class="img-thumbnail">
              <div class="b-img-placeholder b-ratio-5_3">
                <div class="b-img-thumb" data-background-image="<%= slide.image.thumb.url %>"></div>
              </div>
            </div>

            <%= check_box_tag :'slide_ids[]', slide.id %>
          </li>
        <% end %>
      </div>

      <div class="mt-3">
        <div class="row">
          <div class="col-6 pl-2 pr-1">
            <%= button_tag '<i class="fa fa-plus-square-o"></i>'.html_safe,
              name: nil, type: :button,
              class: 'b-btn-ripple b-btn b-btn-raised w-100 b-bg-create',
              'data-toggle': 'modal', 'data-target': "#addSlideModal"
            %>
          </div>

          <div class="col-6 pl-1 pr-2">
            <%= button_tag '<i class="fa fa-trash-o"></i>'.html_safe, name: nil, class: 'b-btn-ripple b-btn b-btn-raised w-100 b-bg-destroy', type: :submit %>
          </div>
        </div>
      </div>
    </ol>

    <div class="b-carousel-inner">
      <div class="slick">
        <% @product.images.each do |slide| %>
          <div class="b-img-placeholder b-ratio-2_1">
            <div class="b-img-thumb" data-background-image="<%= slide.image.url %>"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
