<div id="b-sideNav" class="b-side-nav">
  <ul class="list-group">
    <li class="list-group-item list-group-item-action">user_name</li>
  </ul>
  <ul class="list-group">
    <h6 class="b-list-group-header">ショップ</h6>

    <%= link_to shop_path do %>
      <li class="list-group-item list-group-item-action <%= current_page?(shop_path) ? 'active' : '' %>">
        <i class="fa fa-line-chart"></i>
        全体
      </li>
    <% end %>

    <%= link_to shop_products_path do %>
      <li class="list-group-item list-group-item-action <%= current_page?(shop_products_path) ? 'active' : '' %>">
        <i class="fa fa-calculator"></i>
        製品管理
      </li>
    <% end %>

    <% if current_page?(shop_product_path(params[:id] || 0)) %>
      <%= link_to shop_product_path(params[:id] || 0) do %>
        <li class="list-group-item list-group-item-action active">
          <i class="fa fa-calculator"></i>
          製品
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= form_tag '#', method: :get, html: {} do %>
    <ul class="list-group">
      <h6 class="b-list-group-header">Type</h6>

      <%= label_tag :type, class: 'd-block' do %>
        <% (1..4).each do %>
          <li class="list-group-item list-group-item-action">
            <%= check_box_tag :type, 'type1', params[:type] == 'type1' %>
            Type 1
          </li>
        <% end %>
      <% end %>

    </ul>

    <ul class="list-group">
      <h6 class="b-list-group-header">Price</h6>

      <li class="list-group-item">
        <%= range_field_tag :price, params[:price], min: 0, max: 100000, class: 'b-form-control-range' %>
      </li>
    </ul>
  <% end %>
</div>
